<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/protruding_squares"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/HeaderStyle"
        tools:text="Den"
        android:textSize="@dimen/size_title_text"
        android:background="@drawable/btn_outline"
        android:padding="@dimen/small_padding"
        android:layout_marginStart="@dimen/normal_margin"
        android:textColor="@color/profile_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/normal_margin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainButtonStyle"
        android:text="@string/label_stop"
        android:padding="@dimen/normal_padding"
        android:layout_marginHorizontal="@dimen/large_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/HeaderStyle"
        tools:text="Total score:"
        android:textSize="@dimen/size_title_text"
        android:background="@drawable/btn_outline"
        android:padding="@dimen/small_padding"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:textColor="@color/profile_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/normal_margin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPresentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/HeaderStyle"
        tools:text="123"
        android:textSize="@dimen/size_title_text"
        android:background="@drawable/btn_outline"
        android:padding="@dimen/small_padding"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:textColor="@color/profile_title"
        app:layout_constraintTop_toBottomOf="@+id/textScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/normal_margin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSkin"
        android:layout_width="@dimen/size_icon"
        android:layout_height="@dimen/size_icon"
        tools:src="@drawable/skin_scratch_cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>