<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="InputFieldStyle">
        <item name="android:backgroundTint">@color/grey_auth</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
        <item name="android:textColor">@color/profile_title</item>
        <item name="android:textSize">@dimen/size_name_text</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/profile_title</item>
        <item name="android:textSize">@dimen/size_title_text</item>
    </style>

    <style name="LabelLightStyle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/grey_auth</item>
        <item name="android:textSize">@dimen/size_job_text</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_name_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">@dimen/normal_padding</item>
        <item name="android:layout_marginHorizontal">@dimen/normal_margin</item>
        <item name="android:layout_marginVertical">@dimen/normal_margin</item>
    </style>

    <style name="CustomCircularProgressIndicator">
        <item name="indicatorSize">50dp</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorColor">@color/profile_title</item>
        <item name="trackColor">#22000000</item>
    </style>
</resources>